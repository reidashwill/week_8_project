<h3>Word: <%= @word.name %> </h3>
<h3>Definition: <%= @definition.name %></h3>

<h2>Would you like to change this definition?</h2>
<h2>Use the form below to change it</h2>

<form action="/words/<%= @word.id %>/<%= @definition.id %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <input id="name" name="name" type="text" placeholder="Change definition?">

  <button type="submit" class="btn">Submit!</button>
</form>

<form action="/words/<%= @word.id %>/<%= @definition.id %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit" class="btn btn-danger">Delete Definition</button>
</form>

